<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Advanced DICOM Viewer" Height="900" Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="420"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#2C3E50" Padding="12">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="🧠 Advanced DICOM Viewer" Foreground="White" FontSize="18" FontWeight="Bold"/>
                <TextBlock x:Name="ZoomLabel" Text="Zoom: 100%" Foreground="White" FontSize="14" Margin="30,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- DICOM Display with Overlay -->
        <Border Grid.Row="1" Grid.Column="0" Background="Black" Margin="5" BorderBrush="#34495E" BorderThickness="1">
            <ScrollViewer x:Name="ImageScrollViewer" 
                          HorizontalScrollBarVisibility="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          PreviewMouseWheel="ImageScrollViewer_MouseWheel">
                <Canvas x:Name="OverlayCanvas" Background="Black"
                        MouseLeftButtonDown="OverlayCanvas_MouseLeftButtonDown"
                        MouseLeftButtonUp="OverlayCanvas_MouseLeftButtonUp"
                        MouseMove="OverlayCanvas_MouseMove"
                        MouseRightButtonDown="OverlayCanvas_MouseRightButtonDown">
                    <Image x:Name="DicomImage" Stretch="None"/>
                </Canvas>
            </ScrollViewer>
        </Border>

        <!-- Right Panel -->
        <ScrollViewer Grid.Row="1" Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="5">
            <StackPanel>
                <!-- Metadata -->
                <Expander Header="📊 Metadata" IsExpanded="True" Margin="5">
                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                        <TreeView x:Name="MetadataTree"/>
                    </ScrollViewer>
                </Expander>

                <!-- View Options -->
                <Expander Header="👁️ View Options" IsExpanded="True" Margin="5">
                    <StackPanel Margin="5">
                        <CheckBox x:Name="ChkShowAnnotations" Content="Show Annotations" IsChecked="True" Margin="0,2"/>
                        <CheckBox x:Name="ChkShowMeasurements" Content="Show Measurements" IsChecked="True" Margin="0,2"/>
                        <CheckBox x:Name="ChkShowHU" Content="Show HU Values (CT only)" IsChecked="True" Margin="0,2"/>
                    </StackPanel>
                </Expander>

                <!-- File & Cine Controls -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Load DICOM" Click="LoadDicom_Click" Width="120" Margin="3"/>
                        <Button Content="Load Series" Click="LoadSeries_Click" Width="120" Margin="3"/>
                        <Button Content="▶ Play Cine" Click="PlayCine_Click" Width="100" Margin="3"/>
                        <Button Content="⏸ Stop Cine" Click="StopCine_Click" Width="100" Margin="3"/>
                    </WrapPanel>
                </Border>

                <!-- Window / Level Presets -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="🎛️ Window / Level Presets" FontWeight="Bold" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <Button Content="Abdomen" Click="PresetAbdomen_Click" Width="90" Margin="2"/>
                            <Button Content="Lung" Click="PresetLung_Click" Width="90" Margin="2"/>
                            <Button Content="Brain" Click="PresetBrain_Click" Width="90" Margin="2"/>
                            <Button Content="Bone" Click="PresetBone_Click" Width="90" Margin="2"/>
                            <Button Content="Mediastinum" Click="PresetMediastinum_Click" Width="90" Margin="2"/>
                            <Button Content="Liver" Click="PresetLiver_Click" Width="90" Margin="2"/>
                        </WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Label Content="Window:" Width="60"/>
                            <Slider x:Name="WindowSlider" Minimum="1" Maximum="4000" Value="400" Width="120" ValueChanged="WindowLevelChanged"/>
                            <TextBox x:Name="WindowValue" Text="400" Width="50" Margin="5,0" TextChanged="WindowValue_TextChanged"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Level:" Width="60"/>
                            <Slider x:Name="LevelSlider" Minimum="-1000" Maximum="3000" Value="40" Width="120" ValueChanged="WindowLevelChanged"/>
                            <TextBox x:Name="LevelValue" Text="40" Width="50" Margin="5,0" TextChanged="LevelValue_TextChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Slice Navigation -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="🧭 Slice Navigation" FontWeight="Bold" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Slice:" Width="60"/>
                            <Slider x:Name="SliceSlider" Minimum="0" Maximum="0" Value="0" Width="250" ValueChanged="SliceSlider_ValueChanged"/>
                            <TextBlock x:Name="SliceInfo" Text="0/0" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Transform Tools -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="🔄 Transform Tools" FontWeight="Bold" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <Button Content="↻ Rotate 90°" Click="RotateLeft_Click" Width="100" Margin="2"/>
                            <Button Content="↺ Rotate -90°" Click="RotateRight_Click" Width="100" Margin="2"/>
                            <Button Content="⇄ Flip H" Click="FlipHorizontal_Click" Width="90" Margin="2"/>
                            <Button Content="⇅ Flip V" Click="FlipVertical_Click" Width="90" Margin="2"/>
                            <Button Content="Reset" Click="ResetTransform_Click" Width="90" Margin="2"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Zoom Controls -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="🔍 Zoom Controls" FontWeight="Bold" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <Button Content="Zoom In (+)" Click="ZoomIn_Click" Width="100" Margin="2"/>
                            <Button Content="Zoom Out (-)" Click="ZoomOut_Click" Width="100" Margin="2"/>
                            <Button Content="Fit to Screen" Click="FitToScreen_Click" Width="100" Margin="2"/>
                            <Button Content="100%" Click="Zoom100_Click" Width="90" Margin="2"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Measurement Tools -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="📏 Measurement Tools" FontWeight="Bold" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <Button x:Name="BtnDistance" Content="Distance" Click="MeasureDistance_Click" Width="100" Margin="2"/>
                            <Button x:Name="BtnAngle" Content="Angle" Click="MeasureAngle_Click" Width="100" Margin="2"/>
                            <Button x:Name="BtnArea" Content="Area (ROI)" Click="MeasureArea_Click" Width="100" Margin="2"/>
                            <Button Content="Clear All" Click="ClearMeasurements_Click" Width="90" Margin="2"/>
                        </WrapPanel>
                        <TextBlock Text="Active Tool: None" x:Name="ActiveToolText" Margin="0,5,0,0" FontStyle="Italic"/>
                    </StackPanel>
                </Border>

                <!-- Annotation Tools -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="✏️ Annotation Tools" FontWeight="Bold" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <Button x:Name="BtnFreehand" Content="Freehand" Click="Freehand_Click" Width="100" Margin="2"/>
                            <Button x:Name="BtnArrow" Content="Arrow" Click="Arrow_Click" Width="100" Margin="2"/>
                            <Button x:Name="BtnText" Content="Text" Click="TextAnnotation_Click" Width="100" Margin="2"/>
                            <Button Content="Clear" Click="ClearAnnotations_Click" Width="90" Margin="2"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- Synchronization -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <StackPanel>
                        <TextBlock Text="🔗 Synchronization" FontWeight="Bold" Margin="0,0,0,5"/>
                        <CheckBox x:Name="ChkSyncScroll" Content="Sync Scrolling" IsChecked="False" Margin="0,2"/>
                        <CheckBox x:Name="ChkSyncZoom" Content="Sync Zoom" IsChecked="False" Margin="0,2"/>
                        <CheckBox x:Name="ChkSyncWL" Content="Sync Window/Level" IsChecked="False" Margin="0,2"/>
                    </StackPanel>
                </Border>

                <!-- Export -->
                <Border Background="White" CornerRadius="5" BorderBrush="#BDC3C7" BorderThickness="1" Padding="8" Margin="5">
                    <WrapPanel HorizontalAlignment="Center">
                        <Button Content="Export Snapshot" Click="ExportSnapshot_Click" Width="120" Margin="3"/>
                        <Button Content="Export Report" Click="ExportMeasurements_Click" Width="120" Margin="3"/>
                    </WrapPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Grid.ColumnSpan="2" Background="#34495E" Foreground="White">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="MousePosText" Text="Position: -"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="HUValueText" Text="HU: -"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>